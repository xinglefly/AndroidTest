<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#dee6e9"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_b"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lay_basic_android"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_oneside"
            android:layout_marginRight="@dimen/margin_doubleside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/basic_background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/image_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="Android基础"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_control_android"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_doubleside"
            android:layout_marginRight="@dimen/margin_oneside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/controller_background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/image_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="android控件"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lay_web_service"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_oneside"
            android:layout_marginRight="@dimen/margin_doubleside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/webservice_background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/image_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="网络服务"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_framework_layer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_doubleside"
            android:layout_marginRight="@dimen/margin_oneside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/framework_background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/image_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="框架层"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lay_bottom_driven"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_oneside"
            android:layout_marginRight="@dimen/margin_doubleside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/driver_background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/image_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="底层驱动"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_advanced_application"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_doubleside"
            android:layout_marginRight="@dimen/margin_oneside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/advance_application"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/image_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="高级应用"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lay_speech"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_oneside"
            android:layout_marginRight="@dimen/margin_doubleside"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/speech_background"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/mic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:text="快速语音"
                android:textColor="#ffffff"
                android:textSize="@dimen/default_front_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginBottom="@dimen/margin_doubleside"
            android:layout_marginLeft="@dimen/margin_doubleside"
            android:layout_marginRight="@dimen/margin_oneside"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lay_setting"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/setting_background"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/cog" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_text_right"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:text="设置"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/default_front_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_quit"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_doubleside"
                android:layout_weight="1"
                android:background="@drawable/quit_background"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/on_off" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_text_right"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:text="退出"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/default_front_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>